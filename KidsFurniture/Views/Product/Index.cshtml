@model IEnumerable<KidsFurniture.Models.Product.ProductIndexVM>
@{
    ViewData["Title"] = "Индекс";
}
<h1>Индекс</h1>
<p>
    <a asp-action="Create">Създай нов</a>
</p>
<form asp-controller="Product" asp-action="Index" method="get">
    <p>
        Производител: <input type="text" name="SearchStringBrandName" />
        Категория: <input type="text" name="SearchStringCategoryName" />
        <input type="submit" value="Филтър" />
    </p>
</form>
<table class="table">
    <thead>
        <tr>
            <th>
@Html.DisplayNameFor(model => model.ProductName)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.BrandName)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.CategoryName)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Picture)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Description)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Quantity)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Price)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Discount)
            </th>

        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.ProductName)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.BrandName)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.CategoryName)
                </td>
                <td>
                    <img src="@Html.DisplayFor(modelItem => item.Picture)"
                         alt="Image" width="100" />
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Description)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Quantity)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Price)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Discount) %
                </td>
                <td>
                    <a asp-action="Edit" asp-route-id="@item.Id" class="btn btn-
    warning">Редактирай</a>
                    <a asp-action="Details" asp-route-id="@item.Id" class="btn btn-
    success">Детайли</a>

                    <a asp-action="Delete" asp-route-id="@item.Id" class="btn btn-
    danger">Изтрий</a>

                </td>
            </tr>
        }
    </tbody>
</table>
@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}

